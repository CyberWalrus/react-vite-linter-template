{
    "name": "react-vite-linter-template",
    "private": true,
    "version": "0.0.1",
    "type": "module",
    "scripts": {
        "start": "yarn dev",
        "build": "tsc && vite build",
        "lint": "yarn eslint:check && yarn stylelint:check && yarn ts:check",
        "lint:fix": "yarn eslint:fix && yarn stylelint:fix",
        "test": "yarn test:unit && yarn test:unit:isolate && yarn test:build && yarn test:e2e && yarn test:screenshot",
        "dev": "vite",
        "build:visualizer": "yarn vite-bundle-visualizer",
        "preview": "vite preview",
        "ts:scss:build": "yarn typed-scss-modules src",
        "ts:scss:watch": "yarn typed-scss-modules src --outputFolder __generated__ --watch",
        "ts:check": "yarn ts:scss:build && tsc --noEmit --p tsconfig.check.json",
        "eslint:check": "eslint --max-warnings 0 --ext .jsx,.js,.ts,.tsx src/",
        "eslint:fix": "eslint --fix --ext .jsx,.js,.ts,.tsx src/",
        "stylelint:check": "stylelint \"src/**/*.scss\"",
        "stylelint:fix": "stylelint \"src/**/*.scss\" --fix",
        "test:unit": "VITEST_TEST_TYPE=unit TZ=Europe/Moscow yarn vitest run --coverage --isolate=false",
        "test:unit:isolate": "VITEST_TEST_TYPE=unit-isolate TZ=Europe/Moscow yarn vitest run --coverage --isolate=true",
        "test:screenshot": "VITEST_TEST_TYPE=screenshot TZ=Europe/Moscow yarn vitest run --isolate=false",
        "test:build": "VITE_TEST_SERVER_BUILD=true tsc && VITE_TEST_SERVER_BUILD=true vite build --outDir ./dist-test-server",
        "test:e2e": "TZ=Europe/Moscow yarn playwright test",
        "test:e2e:production": "E2E_PRODUCTION=true TZ=Europe/Moscow yarn playwright test",
        "test:server": "VITE_TEST_SERVER_BUILD=true vite preview --outDir ./dist-test-server --port 4173",
        "test:update": "UPDATE_SCREENSHOTS=true TZ=Europe/Moscow vitest run"
    },
    "dependencies": {
        "@tanstack/react-query": "5.44.0",
        "@tanstack/react-router": "1.35.6",
        "@tanstack/router-devtools": "1.36.0",
        "clsx": "2.1.0",
        "lodash-es": "4.17.21",
        "msw": "2.3.1",
        "react": "18.3.1",
        "react-dom": "18.3.1",
        "zod": "3.23.8",
        "zustand": "4.5.2"
    },
    "devDependencies": {
        "@cyber-walrus/configs": "1.4.1",
        "@playwright/test": "1.44.1",
        "@testing-library/dom": "10.1.0",
        "@testing-library/jest-dom": "6.4.6",
        "@testing-library/react": "16.0.0",
        "@types/lodash-es": "4.17.12",
        "@types/mock-fs": "4.13.4",
        "@types/pixelmatch": "5.2.6",
        "@types/pngjs": "6.0.5",
        "@types/react": "18.3.3",
        "@types/react-dom": "18.3.0",
        "@vitejs/plugin-react-swc": "3.7.0",
        "@vitest/coverage-v8": "1.6.0",
        "concurrently": "8.2.2",
        "css-class-hunter": "0.1.3",
        "dotenv": "16.4.5",
        "jsdom": "24.1.0",
        "mock-fs": "5.2.0",
        "pixelmatch": "5.3.0",
        "playwright": "1.44.1",
        "pngjs": "7.0.0",
        "tsc-alias": "1.8.10",
        "typed-scss-modules": "8.0.1",
        "vite": "5.2.13",
        "vite-bundle-visualizer": "1.2.1",
        "vite-plugin-compression": "0.5.1",
        "vite-plugin-pwa": "0.20.0",
        "vite-plugin-static-copy": "1.0.5",
        "vitest": "1.6.0"
    },
    "msw": {
        "workerDirectory": "public"
    }
}