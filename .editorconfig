root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[{package.json}]
indent_style = space
indent_size = 4

[{.github}/**]
indent_style = space
indent_size = 2

[{build,node_modules}/**]
indent_style = ignore
trim_trailing_whitespace = false
insert_final_newline = ignore
